{
  "manifest_version": 3,
  "name": "Veo 3 Flow Automator",
  "version": "1.0.0",
  "description": "Automates the video generation pipeline on Google Flow (labs.google/fx/tools/flow)",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "https://labs.google/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://labs.google/fx/tools/flow/*"],
      "js": ["utils/storage.js", "content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
